                        <TextView
                            android:id="@+id/subtotalVal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="16dp"
                            android:text="Rs.1000.00"
                            android:textColor="#0A191E"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            card_view:layout_constraintStart_toEndOf="@+id/image2"
                            card_view:layout_constraintTop_toBottomOf="@+id/textViewTitle2" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/subtotal1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:paddingLeft="16dp"
                            android:text="Discount"
                            android:textColor="#0A191E"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            card_view:layout_constraintStart_toEndOf="@+id/image2"
                            card_view:layout_constraintTop_toBottomOf="@+id/textViewTitle2" />

                        <TextView
                            android:id="@+id/subtotalVal1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="16dp"
                            android:text="Rs.20.00"
                            android:textColor="#0A191E"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            card_view:layout_constraintStart_toEndOf="@+id/image2"
                            card_view:layout_constraintTop_toBottomOf="@+id/textViewTitle2" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/subtotal2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:paddingLeft="16dp"
                            android:text="Total"
                            android:textColor="#0A191E"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            card_view:layout_constraintStart_toEndOf="@+id/image2"
                            card_view:layout_constraintTop_toBottomOf="@+id/textViewTitle2" />

                        <TextView
                            android:id="@+id/subtotalVal2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="16dp"
                            android:text="Rs.980.00"
                            android:textColor="#0A191E"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            card_view:layout_constraintStart_toEndOf="@+id/image2"
                            card_view:layout_constraintTop_toBottomOf="@+id/textViewTitle2" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#F8774A"
                android:text="Go to payments"
                android:textColor="@color/white"
                app:iconGravity="end"
                android:textSize="16dp"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/paument" />


        </androidx.constraintlayout.widget.ConstraintLayout>


