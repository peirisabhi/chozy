                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="Chineese"
                        android:textColor="#0A191E"
                        android:textSize="14dp"
